<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".BloodRequestActivity">

    <ImageButton
        android:id="@+id/blood_request_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_arrow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="25dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Request Blood"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Request Blood:"
            android:textColor="@color/black" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:buttonTint="@color/app_red"
                android:id="@+id/myself_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Myself" />

            <RadioButton
                android:buttonTint="@color/app_red"
                android:id="@+id/other_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Other"
                android:layout_marginStart="10dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Patient Name"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/request_blood_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:paddingStart="15sp"
            android:hint="Patient Name"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Mobile Number"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/request_blood_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:inputType="phone"
            android:padding="8dp"
            android:paddingStart="15sp"
            android:hint="Mobile number"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Place or Hospital"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/request_blood_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:paddingStart="15sp"
            android:hint="Hospital"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Blood Group"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"/>

        <Spinner
            android:id="@+id/request_blood_blood_group"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            android:paddingStart="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Time"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <EditText
                android:id="@+id/request_blood_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_edittext"
                android:padding="8dp"
                android:layout_marginEnd="5dp"
                android:hint="Date"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"
                android:paddingStart="15sp"
                android:clickable="false"
                android:longClickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                tools:ignore="TextFields" />
            <EditText
                android:id="@+id/request_blood_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Time"
                android:background="@drawable/rounded_edittext"
                android:padding="8dp"
                android:layout_marginLeft="0dp"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"
                android:paddingStart="15sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Note"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/request_blood_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:inputType="textEmailAddress|textMultiLine"
            android:lines="20"
            android:minLines="4"
            android:scrollHorizontally="false"
            android:hint="Note"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            android:scrollbars="vertical"
            android:background="@drawable/rounded_edittext"
            android:padding="15sp"
            android:focusable="true"
            />
        <LinearLayout
            android:id="@+id/linerlayout_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginVertical="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Needed"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"/>

            <Switch
                android:id="@+id/switch_request_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:trackTint="@drawable/newtrack"
                android:thumbTint="@drawable/newthumb"/>


        </LinearLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/request_blood_spin_kit"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/app_red"
            android:visibility="invisible" />

        <Button
            android:id="@+id/request_blood_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="60dp"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/round_style"
            android:padding="5dp"
            android:text="Request"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:focusable="true"/>

    </LinearLayout>


</RelativeLayout>