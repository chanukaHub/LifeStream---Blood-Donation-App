<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".ProfileActivity">

    <ImageButton
        android:id="@+id/profile_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_arrow"/>


    <RelativeLayout
        android:id="@+id/profile_image_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:civ_circle_background_color="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/app_red"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add_profile_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="80dp"
            android:layout_alignStart="@+id/profile_view"
            app:civ_circle_background_color="@color/white"
            android:src="@drawable/add_profile_image" />


    </RelativeLayout>
    <TextView
        android:id="@+id/profile_email"
        android:layout_width="250dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_image_layout"
        android:fontFamily="@font/roboto_bold"
        />



    <LinearLayout
        android:layout_below="@+id/profile_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_above="@+id/button_layout">

        <LinearLayout
            android:id="@+id/linerlayout_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_below="@+id/profile_email">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Type :"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <Switch
                android:id="@+id/profile_switch_donor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:trackTint="@drawable/newtrack"
                android:thumbTint="@drawable/newthumb"/>
            <TextView
                android:id="@+id/userType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>

        </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="2dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:fontFamily="@font/roboto"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/profile_firstname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:layout_marginRight="5dp"
            android:hint="First Name"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            android:paddingStart="15sp"/>
        <EditText
            android:id="@+id/profile_lastname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:layout_marginLeft="5dp"
            android:hint="Last Name"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            android:paddingStart="15sp"/>

    </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:text="Mobile Number"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/profile_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="phone"
            android:padding="8dp"
            android:paddingStart="15sp"
            android:hint="Mobile Number"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/profile_address_line1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_edittext"
                android:padding="8dp"
                android:layout_marginRight="5dp"
                android:hint="Line 1"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"
                android:paddingStart="15sp"/>
            <EditText
                android:id="@+id/profile_address_line2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_edittext"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:hint="Line 2"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"
                android:paddingStart="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:text="City"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:text="Province"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/profile_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="City"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:paddingStart="15sp"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/profile_province"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:ems="10"
                android:spinnerMode="dropdown"
                android:background="@drawable/rounded_edittext"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"
                android:paddingStart="15sp"
                android:contentDescription="province"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:text="Date of Birth"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:text="Blood Group"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <EditText
                android:id="@+id/profile_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_edittext"
                android:padding="8dp"
                android:layout_marginRight="5dp"
                android:hint="Date of Birth"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"
                android:paddingStart="15sp"
                android:clickable="false"
                android:longClickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"/>
            <Spinner
                android:id="@+id/profile_blood_group"
                android:layout_width="5dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:ems="10"
                android:spinnerMode="dropdown"
                android:background="@drawable/rounded_edittext"
                android:padding="8dp"
                android:layout_marginLeft="0dp"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"
                android:paddingStart="15sp"/>

        </LinearLayout>
    </LinearLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_spin_kit"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/app_red"
        android:visibility="invisible"
        android:layout_above="@+id/button_layout"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Changes"
            android:layout_margin="5dp"
            android:background="@drawable/round_white_btn_style"
            android:clickable="true"
            android:focusable="true" />
        <Button
            android:id="@+id/sign_out_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign Out"
            android:layout_margin="5dp"
            android:background="@drawable/round_style"
            android:clickable="true"
            android:focusable="true"
            />


    </LinearLayout>

</RelativeLayout>