<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/on_boarding_image"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@drawable/onboarding1" />

        <TextView
            android:id="@+id/on_boarding_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onBoardingImage"
            android:fontFamily="@font/roboto_bold"
            android:text="Spare lives"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/on_boarding_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onBoardingTopic"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Join us to see urgent requests for blood donors."
            android:textAlignment="center" />

    </LinearLayout>

