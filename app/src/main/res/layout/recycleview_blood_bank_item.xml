<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:background="@drawable/round_white_btn_style"
    android:layout_margin="5dp"
    android:backgroundTint="@color/gradient_dark_red"
    android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp">
                <TextView
                    android:id="@+id/name_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/app_red"
                    android:layout_marginVertical="5dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/location_icon"
                    android:layout_below="@+id/name_textView1"
                    android:layout_marginVertical="3dp"/>

                <TextView
                    android:id="@+id/location_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="location"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_below="@+id/name_textView1"
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="5dp"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/call_icon"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginVertical="3dp"/>

                <ImageView
                    android:id="@+id/imageViewCall"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/call_red_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="3dp"/>

                <TextView
                    android:id="@+id/phone_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="telephone"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_below="@+id/location_textView"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="5dp"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/time_icon"
                    android:layout_below="@+id/imageView2"
                    android:layout_marginVertical="3dp"/>

                <TextView
                    android:id="@+id/hours_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="hours"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_below="@+id/phone_textView"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="5dp"/>

        </RelativeLayout>




</androidx.cardview.widget.CardView>